
@{
    ViewData["Title"] = "CadastrarLogin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>CadastrarLogin</h1>

<div class="text-center">
    <h1 class="display-4">Cadastrar Usuario</h1>
    <br />
    <form action="/Login/ConfirmarCadastro">

        <div class="form-group testt botaologin">
            <label for="exampleInputPassword1">Nome</label>
            <input name="Nome" class="form-control" id="exampleInputPassword1" placeholder="Nome Completo">
        </div>


        <div class="form-group testt botaologin">
            <label for="exampleInputEmail1">Email</label>
            <input name="Email" type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="email">

        </div>

        <div class="form-group testt botaologin">
            <label for="exampleInputPassword1">Senha</label>
            <input name="Senha" type="password" class="form-control" id="exampleInputPassword1" placeholder="Senha">
        </div>
        <button>Cadastrar</button>
    </form>
    <div class="text-center">
        <a id="FechaRsv" asp-controller="Login" asp-action="Index"
           class="btn btn-success">Voltar</a>
    </div>



</div>
@section Scripts{
    <script>
        $("#mer").hide();
        $("#nav").hide();


    </script>

}



