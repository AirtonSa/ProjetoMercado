            //data: JSON.stringify(parseInt(IdProduto)),//joga para o metodo expecificamente no paramentro
            contentType: 'application/json',

            beforeSend: function () {
                // carregamento

            }

        }).done(function (msg) { //mostrar alguma coisa;
           // debugger;

            // quanto retorna d controller vendaajax
            $('.CarIcn').html(msg);
           // $('#ovl').removeClass('overlay');
           
        }).fail(function (jqXHR, textStatus, msg) {

            alert(msg);
        })

        function Salvar(IdProduto) {
            $('#ovl').addClass('overlay');

            $.ajax({ //inicio do ajax
                url: "/Vendas/Addcarrinho",
                method: 'Post',
                data: JSON.stringify(parseInt(IdProduto)),//joga para o metodo expecificamente no paramentro
                contentType: 'application/json',

                beforeSend: function () {
                    // carregamento

                }

            }).done(function (msg) { //mostrar alguma coisa;
                //debugger;

                // quanto retorna d controller vendaajax
                $('.CarIcn').html(msg.quantidadeitens);
                $('#ovl').removeClass('overlay');
                alert('Produto adicionado!');
            }).fail(function (jqXHR, textStatus, msg) {

                alert(msg);
            })

        }
    </script>
}



